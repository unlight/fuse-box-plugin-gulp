{
  "name": "fusebox-gulp-plugin",
  "version": "1.0.1",
  "description": "Adapt gulp plugins to work with fuse-box",
  "main": "lib",
  "scripts": {
    "clean": "rm -rf .fusebox lib",
    "postinstall": "npm i fuse-box uglify-js",
    "compile": "tsc",
    "compile:w": "tsc -w",
    "test": "npm run compile && npm run test:r",
    "test:r": "ava lib/*.spec.js --verbose --serial --no-cache",
    "test:w": "ava lib/*.spec.js --verbose --serial --watch",
    "dev": "concurrently -r -k -p \"{name}:\" -n \"c,t\" \"npm run compile:w\" \"npm run test:w\""
  },
  "devDependencies": {
    "@types/node": "7.0.5",
    "@types/through2": "2.0.32",
    "@types/vinyl": "2.0.0",
    "ava": "0.18.1",
    "concurrently": "3.3.0",
    "gulp-debug": "3.1.0",
    "gulp-eslint": "3.0.1",
    "gulp-inject-string": "1.1.0",
    "gulp-json5": "0.0.2",
    "gulp-load-plugins": "1.5.0",
    "gulp-markdown": "1.2.0",
    "gulp-replace": "0.5.4",
    "gulp-size": "~2.1.0",
    "through2": "~2.0.3",
    "typescript": "2.1.6"
  },
  "peerDependencies": {
    "fuse-box": "^1.3.24"
  },
  "dependencies": {
    "pumpify": "1.3.5",
    "stream-to-string": "1.1.0",
    "vinyl": "2.0.1"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unlight/fusebox-gulp-plugin.git"
  },
  "keywords": [
    "gulp",
    "fuse-box"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unlight/fusebox-gulp-plugin/issues"
  },
  "homepage": "https://github.com/unlight/fusebox-gulp-plugin#readme"
}
